{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "rootDir": "srcs",
    "outDir": "dist",
    "declaration": true,
    "paths": {
      "@nxtranet/service": [
        "../../packages/service"
      ],
      "@nxtranet/headers": [
        "../../packages/headers"
      ]
    }
  },
  "exclude": [
    "tmp",
    "dist",
    "tests",
    "node_modules"
  ],
  "include": [
    "srcs"
  ]
}
