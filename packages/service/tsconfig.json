{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "strict": true,
    "rootDir": "srcs",
    "outDir": "dist",
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "@nxtranet/nxtsock": [
        "../../packages/nxtsock"
      ]
    }
  },
  "exclude": [
    "dist",
    "tests",
    "node_modules",
  ],
  "typedocOptions": {
    "entryPoints": [
      "srcs/index.ts"
    ],
    "out": "docs"
  }
}
